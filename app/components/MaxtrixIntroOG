}

.stage-expand .a-slide-text {
  max-width: 600px;
  opacity: 1;
}

/* Glitch Trigger */
@keyframes matrix-glitch {
  0% { text-shadow: 3px 0 #ff00c1, -3px 0 #00fff9; transform: translate(2px, -1px); }
  25% { text-shadow: -3px 0 #ff00c1, 3px 0 #00fff9; transform: translate(-2px, 1px); }
  50% { text-shadow: 2px 0 #00ff41, -2px 0 #ff00c1; transform: translate(1px, 2px); }
  100% { text-shadow: 0px 0 transparent; transform: translate(0); }
}

.stage-expand .matrix-name-box {
  animation: matrix-glitch 0.4s ease-out 2;
}

/* Exit Fade */
.matrix-exit {
  opacity: 0;
  filter: blur(15px);
  transition: opacity 1s ease, filter 1s ease;
  pointer-events: none;
}




