  overflow: hidden;
}

.matrix-canvas-layer {
  position: absolute;
  inset: 0;
  z-index: 1;
  opacity: 0.35;
}

/* --- NAME CONTAINER --- */
.matrix-name-box {
  position: relative;
  z-index: 10;
  font-family: 'Inter', sans-serif;
  font-weight: 900;
  font-size: clamp(2rem, 10vw, 5rem);
  color: #ffffff;
}

.name-wrapper {
  display: flex;
  align-items: baseline;
  justify-content: center;
  position: relative;
}

.initial-letter {
  position: relative;
  z-index: 15;
}

/* --- JEFFERY EXPANSION (STRETCH) --- */
.expand-jeffery {
  max-width: 0;
  opacity: 0;
  overflow: hidden;
  display: inline-block;
  white-space: nowrap;
  color: #00ff41;
  /* Green Matrix Glow */
  text-shadow: 0 0 8px rgba(0, 255, 65, 0.8), 0 0 20px rgba(0, 255, 65, 0.4);
  transition: max-width 1.2s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.6s ease;
}

.stage-expand .expand-jeffery {
  max-width: 500px;
  opacity: 1;
}

/* --- THE SPACE BETWEEN NAMES --- */
.name-space {
  width: 0;
  display: inline-block;
  overflow: hidden;
  transition: width 0.8s ease;
}

.stage-expand .name-space {
  width: 0.35em;
}

/* --- ACHAMFUOR HINGE (THE SLIDE LOGIC) --- */
.hinge-text {
  display: inline-block;
  transform-origin: left;
  white-space: nowrap;
  opacity: 1;
  width: auto;
  flex-shrink: 0;
  transition: 
    transform 0.8s ease-in, 
    opacity 0.6s ease, 
    width 0.8s cubic-bezier(0.4, 0, 0.2, 1), 
    letter-spacing 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Animating width to 0 here is what slides the "JA" to the center */
.stage-fold .hinge-text,
.stage-recenter .hinge-text {
  transform: rotateY(-110deg);
  opacity: 0;
  width: 0;
  letter-spacing: -1em;
  pointer-events: none;
}

/* CRITICAL FIX: Ensures "chamfuor" doesn't appear twice at the end */
.stage-expand .hinge-text {
  display: none !important;
}

/* --- ACHAMFUOR EXPANSION (FINAL REVEAL) --- */
.expand-achamfuor {
  max-width: 0;
  opacity: 0;
  overflow: hidden;
  display: inline-block;
  white-space: nowrap;
  color: #00ff41;
  /* Green Matrix Glow */
  text-shadow: 0 0 8px rgba(0, 255, 65, 0.8), 0 0 20px rgba(0, 255, 65, 0.4);
  transition: max-width 1.2s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.6s ease;
}

.stage-expand .expand-achamfuor {
  max-width: 600px;
  opacity: 1;
}

/* --- EXIT FADE --- */
.matrix-exit {
  opacity: 0;
  filter: blur(15px);
  transition: opacity 1.2s ease, filter 1s ease;
}







